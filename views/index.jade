extends layout

// Front landing page
block content
	.jumbotron
		h1.text-uppercase.text-center= title
	.container
		.row
			.col-md-8
				// Great placeholder site, btw
				img.img-responsive(src="https://spaceholder.cc/800x600")
			.col-md-4
				p.lead Compelling description goes here
				if !userLoggedIn
					a.btn.btn-default.btn-block(href="/login")
						span.glyphicon.glyphicon-log-in
						!= ' Log in'
				if !userLoggedIn
					a.btn.btn-default.btn-block(href="/signup")
						span.glyphicon.glyphicon-user
						!= ' Sign up'
				a.btn.btn-default.btn-block(href="/users") User list
				a.btn.btn-default.btn-block(href="/games") Game list
				if userLoggedIn
					a.btn.btn-default.btn-block(href="/logout")
						span.glyphicon.glyphicon-log-out
						!= ' Sign out'

